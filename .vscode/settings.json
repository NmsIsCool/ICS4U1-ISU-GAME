{
    "java.project.sourcePaths": [
        "src"
    ],

    "java.project.outputPath": "bin",

    //reference needed libraries
    "java.project.referencedLibraries": [
        "lib/**/*.jar",
        "lib/jinput.jar",
        "lib/lwjgl.jar",
        "lib/lwjgl_util.jar",
        "lib/slick.jar",
    ],
    //set windowsdll path for lwjgl, allow for more memory to be used as well as a larger initial heap size
    "java.debug.settings.vmArgs": "-Djava.library.path=lib/windowsdll -Xmx512M -Xms256M",

}